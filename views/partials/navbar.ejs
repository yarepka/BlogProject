<!-- Navbar -->
<nav id="main-nav">
  <div class="logo-wrapper">
    <img class="logo" src="./img/logo.png">
  </div>

  <div class="search">
    <i class="fas fa-search"></i>
    <input type="text" id="search">
  </div>

  <ul class="list">
