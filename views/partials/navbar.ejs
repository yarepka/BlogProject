    <li>
      <a class="btn user">
        <i class="fas fa-user"></i> <i class="fa fa-arrow-down"></i>
      </a>
      <div class="dropdown no-display">
        <ul>
          <% if(login) { %>
          <li><a href="/user/profile"><i class="fas fa-user-circle"></i>My Profile</a></li>
          <li><a id="logout"><i class="fas fa-sign-out-alt"></i>Log Out</a></li>
          <% } else { %>
          <li><a><i class="fas fa-sign-in-alt"></i>Log In / Sign Up</a></li>
          <% } %>
        </ul>
      </div>
    </li>
